<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.activities.learn.MemorizeActivity"
    android:id="@+id/fragment_memorize_rootview"
    android:orientation="vertical">

        <TextView
            android:id="@+id/memorize_answer_txt"
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:background="@drawable/card"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/text_xxlarge"
            android:layout_centerInParent="true"
            android:gravity="center"/>

        <Button
            android:id="@+id/memorize_answer_btn"
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:layout_centerInParent="true"
            android:background="@drawable/card_verso_memorize"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_xxlarge"
            android:textStyle="italic"
            android:text="@string/memorize_answer_btn"/>

    </RelativeLayout>